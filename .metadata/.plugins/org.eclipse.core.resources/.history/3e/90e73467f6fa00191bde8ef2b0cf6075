
public class Condicionales {
	public static void main(String[] args) {
		boolean cierto = true;
        //ifs
        if(cierto == true){
            System.out.println("El valor es cierto");
        }
        
        if(cierto != true){
            console.log("el valor es falso");
        }

        if(cierto == false){
            console.log("el valor es falso");
        }
        if(cierto){
            console.log("el valor es verdadero");
        }
        if(!cierto){//! = NOT
            console.log("el valor es false");
        }
        //las llaves engloban varias sentencias
        if(cierto){
            console.log("Es cierto");
            console.log("y lo sabes");
        }
        if(!cierto){
            console.log("Es falso");
        }
        console.log("y lo sabes");
        //todas las estructuras de control pueden llevar
        //llaves o no, si no la llevan afecta solamente a
        //la siguiente linea
        cierto = false;
        if(!cierto){
            console.log("Es falso");
            console.log("de hecho, muy falso");
        }

        var numero1 = 1;
        var numero2 = 10;

        if(numero1 > 0 && numero2 < 20){//&& = AND
            console.log("El numero es mayor que 0 Y menor que 20");
        }

        if(numero1 < 0 || numero2 < 20){//|| = OR
            console.log("numero1 es menor que 0 OR numero2 menor que 20");
        }

        if(cierto){
            console.log("la variable es cierta");
        }else{
            console.log("la variable NO es cierta");
        }

        var numero = 1;
        if(numero == 0){
            console.log("El numero vale 0");
        }else if(numero == 1){
            console.log("El numero vale 1");
        }else if(numero == 2){
            console.log("el numero vale 2");
        }else{
            console.log("el numero no vale ni 0, ni 1, ni 2");
        }
	}
}
